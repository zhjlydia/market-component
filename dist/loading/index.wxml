<view
  class="spui-loading custom-class"
  style="width: {{ size }}; height: {{ size }}"
>
  <view
    class="spui-loading__spinner spui-loading__spinner--{{ type }}"
    style="color: {{ color }};"
  >
    <view
      wx:if="{{ type === 'spinner' }}"
      wx:for="item in 12"
      wx:key="index"
      class="spui-loading__dot"
    />
  </view>
</view>
