
.machine-content {
  display: grid;
  grid-template-columns: repeat(3, auto);
  grid-template-rows: repeat(3, auto);
  grid-gap: 10rpx;
}
.machine-item-wrap{
  border-radius:10rpx;
  overflow: hidden;
  background:#fff;
}
.machine-item-wrap.btn{
  grid-area: 2/2;
}
.machine_item_ele{
  height:100%;
}
.machine_item_img{
  width:100%;
  height:70%;
}
.award-text{
  font-size:20rpx;
  text-align:center;
}
.fill100{
  width:100%;
  height:100%;
}
/* 高亮节点 */
.highlight {
  position: relative;
}

.highlight ::after{
  content: "";
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: black;
  opacity: 0.2;
}